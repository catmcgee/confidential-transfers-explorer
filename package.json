{
  "name": "ct-explorer",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:web": "bun run --filter @ct-explorer/web dev",
    "dev:indexer": "bun run --filter @ct-explorer/indexer dev",
    "build": "bun run --filter '*' build",
    "build:shared": "bun run --filter @ct-explorer/shared build",
    "lint": "bun run --filter '*' lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "bun run --filter '*' typecheck",
    "db:migrate": "bun run --filter @ct-explorer/indexer db:migrate",
    "db:seed": "bun run --filter @ct-explorer/indexer db:seed",
    "setup:mint": "cd apps/web && bun run ../../scripts/setup-ct-mint.ts",
    "mint:more": "cd apps/web && bun run ../../scripts/mint-more.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "zk-elgamal-proof": "https://github.com/solana-program/zk-elgamal-proof.git#main"
  }
}
